@using System.Web.Optimization
@model int
@{ Init("DebugPage"); }


<head>
    <title>@(GetGlobalResource("RES_SITE_ApplicationTitle"))</title>
    <style>
        .hidden-before-rule-apply {
            display: none;
        }

        .trash-icon {
            color: red;
            cursor: pointer;
        }

        .clickable-cell {
            cursor: pointer;
        }

        .middle-center {
            vertical-align: middle !important;
            text-align: center;
        }

        .sortorder:after {
            content: '\25b4';
        }

        .sortorder.reverse:after {
            content: '\25be';
        }

        .error-icon {
            color: #d9534f;
        }

        .warning-icon {
            color: #f0ad4e;
        }

        .info-icon {
            color: #46b8da;
        }

        .active-filter {
            font-weight: bold !important;
        }


        pre {
            outline: 1px solid #ccc;
            padding: 5px;
            margin: 5px;
        }

        .string {
            color: green;
        }

        .number {
            color: darkorange;
        }

        .boolean {
            color: blue;
        }

        .null {
            color: magenta;
        }

        .key {
            color: red;
        }

        .inactive {
            opacity: .65;
        }
    </style>
    <link rel="stylesheet" type="text/css" href="@GetContentWithVersion("~/Themes/Bootstrap/css/bootstrap.min.css")">
    <link rel="stylesheet" type="text/css" href="@GetContentWithVersion("~/Themes/Bootstrap/Bootstrap_Generated.css")">

    @Scripts.Render("~/bundle/scripts/dependencies")
    @Scripts.Render("~/bundle/scripts/clms-framework")

    <script src="@GetContentWithVersion("~/Scripts/Controls/Datasource/clms.datasource.widgets.js")"></script>
    <script src="@GetContentWithVersion("~/Scripts/Themes/Bootstrap.js")"></script>
    <script src="@GetContentWithVersion("~/Themes/Bootstrap/js/bootstrap.min.js")"></script>
    <script src="@GetContentWithVersion("~/Scripts/Controls/Menu/clms.menu.control.js")"></script>


    <link href="~/Scripts/Controls/DebugConsole/json-formatter.min.css" rel="stylesheet" />
    <script src="~/Scripts/Controls/DebugConsole/json-formatter.min.js"></script>
    <script src="~/Scripts/Controls/DebugConsole/recursion-helper.js"></script>

    <script>
        var modules = Joove.ClmsAngular.getUsedAngularModules(['jsonFormatter']);
        var $app = angular.module('Application', modules);
        var _commander = new Joove.ClientCommander();
        var _appVersion = "@AppVersion";
        var _resourcesManager = new Joove.ResourcesManager();
        var _historyManager = new Joove.HistoryManager();
        var _themeManager = new Joove.ThemeManager(_themeBootstrap);
        var _context = {
            isDirty: false,
            siteRoot: '@string.Format("{0}://{1}{2}", Request.Url.Scheme, Request.Url.Authority, Url.Content("~"))',
            currentAction: '@ViewContext.RouteData.Values["action"]',
            currentController: '@ViewContext.RouteData.Values["controller"]',
            isModal: "false",
            currentVersion: '@AppVersion'
        };
    </script>
    <meta name="viewport" content="width=device-width, initial-scale=1">
</head>


<script src="@GetContentWithVersion("~/Scripts/Third-Party/jquery.signalR.min.js")"></script>
<script src="@GetContentWithVersion("~/signalr/hubs")"></script>
<!-- end start -->
<script>
    
    var currentSessionID = '@HttpContext.Current.Session.SessionID';

</script>
<script src="@GetContentWithVersion("~/Scripts/Controls/DebugConsole/DebugPage.js")"></script>
<div class="form-root-element"
     ng-controller="DebugPageController"
     ng-app="Application"
     ng-model-options="{updateOn:'blur'}">


    <nav class="navbar navbar-default">
        <div class="container-fluid">
            <!-- Brand and toggle get grouped for better mobile display -->
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="#">Debug Console</a>
            </div>

            <!-- Collect the nav links, forms, and other content for toggling -->
            <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                <form class="navbar-form navbar-left">
                    <div class="form-group" ng-repeat="messageType in messageTypes | orderBy:'priority'">
                        <button ng-click="ApplyFilter(messageType)" type="button" class="{{messageType.buttonStyle}} {{messageType.enabled?'active':'inactive'}}"><span class="badge">{{messageType.count}}</span>{{messageType.label}}</button>
                    </div>
                    <button style="margin-left:10px" ng-click="clearDebugMessages()" type="button" class="btn btn-sm btn-default"><span ng-click="DeleteDebugLine(debugData.Guid, debugData.Ticks)" class="glyphicon glyphicon-erase" aria-hidden="true"></span>  Clear</button>
                </form>
                <form class="navbar-form navbar-right">
                    <div class="input-group">
                        <input type="text" class="form-control input-sm" placeholder="Search messages ..." aria-describedby="basic-addon2" ng-model="messageSearchText">
                        <span class="input-group-addon" id="basic-addon2"><span class="glyphicon glyphicon-search" aria-hidden="true"></span></span>
                    </div>
                </form>
            </div><!-- /.navbar-collapse -->
        </div><!-- /.container-fluid -->
    </nav>

    <div jb-id='MasterPageBodyContainer' jb-type='BodyContainer' class="master-page-body-container container-fluid jb-control">
        <div class="row">
            <table class="table table-hover table-condensed" style="font-family: monospace;">
                <thead>
                    <tr>
                        <th colspan="4" class="col-lg-12 col-md-12 col-sm-12">
                            <div class="col-lg-2 col-md-2 col-sm-2 clickable-cell middle-center" style="text-align: center; vertical-align:middle" ng-click="sort('Type')"><span>Type</span> <span class="sortorder" ng-show="sortBy === 'Type'" ng-class="{reverse: sortReverse}"></span></div>
                            <div class="col-lg-2 col-md-2 col-sm-2 clickable-cell" ng-click="sort('Ticks')"><span>Time Stamp</span> <span class="sortorder" ng-show="sortBy === 'Ticks'" ng-class="{reverse: sortReverse}"></span></div>
                            <div class="col-lg-8 col-md-8 col-sm-8"><span>Details</span></div>
                        </th>
                    </tr>
                </thead>
                <tbody ng-repeat="debugData in DebugEventData | filter:filterBy | filter:{ 'Data': messageSearchText} | orderBy:sortBy:sortReverse">
                    <tr>
                        <td colspan="4" class="col-lg-12 col-md-12 col-sm-12 {{debugData.rowClass}}">
                            <div class="col-lg-2 col-md-2 col-sm-2 middle-center"><span class="{{debugData.rowIcon}}" aria-hidden="true"></span></div>
                            <div class="col-lg-2 col-md-2 col-sm-2" style="vertical-align:middle">{{debugData.Timestamp}}</div>
                            <div class="col-lg-8 col-md-8 col-sm-8"><json-formatter json='debugData.DataObject' open="0"></json-formatter></div>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>